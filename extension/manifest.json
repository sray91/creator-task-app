{
  "manifest_version": 3,
  "name": "LinkedIn Posts Sync",
  "version": "1.0.0",
  "description": "Sync your LinkedIn posts to CreatorTask for content analysis and planning",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*",
    "https://app.creatortask.com/*",
    "https://app.creatortask.app/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Posts Sync"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
} 